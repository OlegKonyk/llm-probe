# Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# API Key Authentication
# =============================================================================

# API key provider: "env" (single key) or "secrets-manager" (AWS)
API_KEY_PROVIDER=env

# API key for authentication
# Generate a secure random key: openssl rand -hex 32
# IMPORTANT: Keep this secret! Don't commit to git!
API_KEY=your-secret-api-key-here

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider type: "ollama" (local) or "bedrock" (AWS)
LLM_PROVIDER=ollama

# =============================================================================
# Ollama Configuration (if LLM_PROVIDER=ollama)
# =============================================================================

# Ollama service URL
OLLAMA_HOST=http://localhost:11434

# Ollama model to use
# Must be pulled first: ollama pull llama3.2:latest
OLLAMA_MODEL=llama3.2:latest

# Generation timeout in milliseconds
OLLAMA_TIMEOUT_MS=30000

# =============================================================================
# AWS Bedrock Configuration (if LLM_PROVIDER=bedrock)
# =============================================================================

# AWS region for Bedrock
# AWS_REGION=us-east-1

# Bedrock model ID
# BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# AWS Secrets Manager secret name (if API_KEY_PROVIDER=secrets-manager)
# API_KEY_SECRET_NAME=llm-test/api-keys

# =============================================================================
# Server Configuration
# =============================================================================

# Server port
PORT=3000

# Node environment: development | production | test
NODE_ENV=development

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# Rate Limiting
# =============================================================================

# Time window for rate limiting (ms)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per IP per window
RATE_LIMIT_MAX_REQUESTS=100
